<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ow2.aspirerfid.epcis.repository.model">

	<class name="EPCClass" lazy="true" 
		proxy="org.ow2.aspirerfid.epcis.repository.model.EPCClass"
		dynamic-update="false" dynamic-insert="false"
		select-before-update="false" table="voc_EPCClass">

		<id name="id">
			<generator class="native" />
		</id>
		
		<natural-id mutable="true">
			<property name="uri" type="java.lang.String" not-null="true" 
				insert="true" update="true" index="voc_EPCClass_uri_ix"/>
		</natural-id>

	</class>

</hibernate-mapping>