<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ow2.aspirerfid.epcis.repository.model">

	<class name="EPCClassAttrId" lazy="true" 
		proxy="org.ow2.aspirerfid.epcis.repository.model.EPCClassAttrId"
		dynamic-update="false" dynamic-insert="false"
		select-before-update="false" table="voc_epcClass_attr">

		<composite-id name="VocabularyAttrCiD"
			class="org.ow2.aspirerfid.epcis.repository.model.VocabularyAttrCiD" > 
			<key-property name="attribute" column="attribute" type="java.lang.String"></key-property>
			<key-property name="id" column="id" type="java.lang.Long"></key-property>
		</composite-id>
		
		<property name="value" type="java.lang.String" not-null="true"
			insert="true" update="true"></property>
	</class>
</hibernate-mapping>