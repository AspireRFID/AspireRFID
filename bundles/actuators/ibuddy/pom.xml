	<modelVersion>4.0.0</modelVersion>
	<groupId>org.ow2.aspirerfid</groupId>
	<artifactId>ibuddy</artifactId>
	<packaging>bundle</packaging>
	<name>OW2 :: AspireRFID :: iBuddy</name>
	<version>1.0.0</version>
	<dependencies>

		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.shell</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.compendium</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.ow2.aspirerfid</groupId>
			<artifactId>libusbjava</artifactId>
			<version>2.0.0</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Copyright>OW2 Aspire RFID</Bundle-Copyright>
						<Bundle-Name>${pom.name}</Bundle-Name>
						<Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
						<Bundle-Description>${pom.description}</Bundle-Description>
						<Bundle-Vendor>Daniel Lovera, Cl√©ment Deschamps, El Mehdi
							Damou</Bundle-Vendor>
						<Private-Package>
							org.ow2.aspirerfid.ibuddy.impl,
							org.ow2.aspirerfid.ibuddy.cmd
						</Private-Package>
						<Export-Package>
							org.ow2.aspirerfid.ibuddy.service		
						</Export-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-ipojo-plugin</artifactId>
				<version>1.0.0</version>
				<executions>
					<execution>
						<goals>
							<goal>ipojo-bundle</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>