<ipojo>
	<component classname="org.ow2.aspirerfid.ibuddy.impl.IBuddy" immediate="false" architecture="true">
		<provides />
		<requires field="m_libusb"/>
		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />
	</component>
	
	<component classname="org.ow2.aspirerfid.ibuddy.cmd.IBuddyCommand" immediate="false" architecture="true">
		<provides/>
		<requires field="buddy" optional="false"/>
		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />
	</component>
	

	<instance component="org.ow2.aspirerfid.ibuddy.impl.IBuddy" name="ibuddy_instance" />
	<instance component="org.ow2.aspirerfid.ibuddy.cmd.IBuddyCommand" name="ibuddycmd_instance" />
</ipojo>
