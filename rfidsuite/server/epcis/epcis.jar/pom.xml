<project xmlns="http://maven.apache.org/POM/4.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<parent>
		<groupId>org.ow2.aspirerfid</groupId>
		<artifactId>epcis</artifactId>
		<version>2.0.0</version>
	</parent>
	
	<artifactId>epcis.jar</artifactId>
	<version>2.0.0</version>
	<name>AspireRFID EPC IS - EJB-JAR</name>

	<modelVersion>4.0.0</modelVersion>
	<packaging>ejb</packaging>

	<dependencies>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>xmlbeans</artifactId>
			<version>2.0.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>client</groupId>
			<artifactId>client</artifactId>
			<version>1.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>ow_ejb3_core_api</groupId>
			<artifactId>ow_ejb3_core_api</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>ow_ejb3_persistence_api</groupId>
			<artifactId>ow_ejb3_persistence_api</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>jboss-annotations-ejb3</groupId>
			<artifactId>jboss-annotations-ejb3</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>jbossws-core</groupId>
			<artifactId>jbossws-core</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>jboss-jaxws</groupId>
			<artifactId>jboss-jaxws</artifactId>
			<version>1.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>jonas</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>server</name>
					<value>jonas</value>
				</property>
			</activation>
			<build>
				<plugins>

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<descriptors>
								<descriptor>
									src/main/resources/descriptor.xml
								</descriptor>
							</descriptors>
						</configuration>
						<executions>
							<execution>
								<id>make-assembly</id><!-- this is used for inheritance merges -->
								<phase>package</phase><!-- append to the packaging phase. -->
								<goals>
									<goal>attached</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-ejb-plugin</artifactId>
						<version>2.1</version>
						<configuration>
							<ejbVersion>3.0</ejbVersion>
							<archive>
								<manifest>
									<addClasspath>false</addClasspath>
								</manifest>
							</archive>
						</configuration>
					</plugin>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<configuration>
									<tasks>
										<delete
											dir="./target/classes/org/ow2/aspirerfid/epcis/server/jboss" />
									</tasks>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>jboss</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<property>
					<name>server</name>
					<value>jboss</value>
				</property>
			</activation>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-ejb-plugin</artifactId>
						<version>2.1</version>
						<configuration>
							<ejbVersion>3.0</ejbVersion>
							<archive>
								<manifestFile>
									src/main/resources/META-INF/MANIFEST.MF
								</manifestFile>
							</archive>
						</configuration>
					</plugin>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<configuration>
									<tasks>
										<delete
											dir="./target/classes/org/ow2/aspirerfid/jonas/webservice" />
										<delete
											dir="./target/classes/org/ow2/aspirerfid/epcis/server/jonas" />
									</tasks>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>

