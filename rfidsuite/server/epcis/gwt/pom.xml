<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>org.ow2.aspirerfid</groupId>
		<artifactId>epcis</artifactId>
		<version>2.0.0</version>
	</parent>

	<artifactId>epcis.gwt</artifactId>
	<version>2.0.0</version>
	<name>AspireRFID EPC IS - WAR-GWT</name>

	<modelVersion>4.0.0</modelVersion>
	<packaging>war</packaging>
	<pluginRepositories>
		<pluginRepository>
			<id>gwt-maven</id>
			<url>http://gwt-maven.googlecode.com/svn/trunk/mavenrepo/</url>
		</pluginRepository>
	</pluginRepositories>

  <dependencies>
    <dependency>
      <groupId>${pom.groupId}</groupId>
      <artifactId>epcis.jar</artifactId>
      <version>2.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <version>1.4.60</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-servlet</artifactId>
      <version>1.4.62</version>
    </dependency>
    <dependency>
      <groupId>gwt</groupId>
      <artifactId>googlemaps</artifactId>
      <version>2.2.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>gwt</groupId>
      <artifactId>gwttk</artifactId>
      <version>0.2.3</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>gwt</groupId>
      <artifactId>gwt-widgets</artifactId>
      <version>0.1.5</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>gwt</groupId>
      <artifactId>simpledatepicker</artifactId>
      <version>1.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>jfree</groupId>
      <artifactId>jcommon</artifactId>
      <version>1.0.10</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>jfree</groupId>
      <artifactId>jfreechart</artifactId>
      <version>1.0.6</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <url>http://maven.apache.org</url>
  <repositories>
    <repository>
      <id>gwt-maven</id>
      <url>http://gwt-maven.googlecode.com/svn/trunk/mavenrepo</url>
    </repository>
  </repositories>

  <build>
    <finalName>epcis</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.0</version>
        <configuration>
          <webXml>target/web.xml</webXml>
          <webResources>
            <resource>
              <!-- this is relative to the pom.xml directory -->
              <directory>/${pom.basedir}/../epcis.jar/target/classes/</directory>
            </resource>
          </webResources>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.totsp.gwt</groupId>
        <artifactId>maven-googlewebtoolkit2-plugin</artifactId>
        <version>LATEST</version>
        <configuration>
          <runTarget>org.ow2.aspirerfid.app.epcis.IndexModule/IndexModule.html</runTarget>
          <compileTargets>
            <param>org.ow2.aspirerfid.app.epcis.IndexModule</param>
          </compileTargets>
          <gwtHome>${env.GWT_ROOT}</gwtHome>
          <extraJvmArgs>-Xmx128m</extraJvmArgs>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>mergewebxml</goal>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>jboss</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>server</name>
          <value>jboss</value>
        </property>
      </activation>

      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <configuration>
                  <tasks>
                    <delete file="./target/epcis/WEB-INF/webservices.xml" />

                    <jar destfile="./target/epcis.war"
                      basedir="./target/epcis" update="no">
                      <include name="**/*.*" />
                    </jar>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>jonas</id>
      <activation>
        <activeByDefault>true</activeByDefault>
        <property>
          <name>server</name>
          <value>jonas</value>
        </property>
      </activation>

      <build>
        <finalName>epcis</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>compile</phase>
                <id>java2wsdl</id>
                <configuration>
                  <tasks>
                    <path id="base.classpath">
                      <pathelement location="target/classes" />
                      <fileset dir="${env.JONAS_ROOT}/lib/commons">
                        <include name="j2ee/*.jar" />
                        <include name="jonas/monolog/*ow_util_log*.jar" />
                        <include name="jonas/ow_jonas.jar" />
                      </fileset>
                    </path>
                    <path id="axis.classpath">
                      <path refid="base.classpath" />
                      <fileset dir="${env.JONAS_ROOT}/lib/commons">
                        <include name="jonas/axis/*.jar" />
                        <include name="jonas/jakarta-commons/*commons-discovery*.jar" />
                        <include name="jonas/jakarta-commons/*commons-logging*.jar" />
                      </fileset>
                      <fileset dir="${env.JONAS_ROOT}/lib/tools">
                        <include name="*axis-ant*.jar" />
                      </fileset>
                    </path>
                    <property name="report_service_name" value="ReportServiceWeb" />
                    <property name="tag_service_name" value="TagService" />
                    <taskdef name="axis-java2wsdl"
                      classname="org.apache.axis.tools.ant.wsdl.Java2WsdlAntTask">
                      <classpath refid="axis.classpath" />
                    </taskdef>

                    <mkdir dir="src/main/webapp/WEB-INF/wsdl" />
                    <axis-java2wsdl
                      classname="org.ow2.aspirerfid.jonas.webservice.${report_service_name}"
                      location="http://dummy-url" serviceportname="${report_service_name}Port"
                      namespace="urn:${report_service_name}" typeMappingVersion="1.3"
                      output="src/main/webapp/WEB-INF/wsdl/${report_service_name}.wsdl">
                      <classpath refid="base.classpath" />
                    </axis-java2wsdl>
                    <axis-java2wsdl
                      classname="org.ow2.aspirerfid.jonas.webservice.${tag_service_name}"
                      location="http://dummy-url" serviceportname="${tag_service_name}Port"
                      namespace="urn:${tag_service_name}" typeMappingVersion="1.3"
                      output="src/main/webapp/WEB-INF/wsdl/${tag_service_name}.wsdl">
                      <classpath refid="base.classpath" />
                    </axis-java2wsdl>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>

              <execution>
                <id>wsgen</id>
                <phase>package</phase>
                <configuration>
                  <tasks>
                    <property environment="env" />
                    <property name="jonas.root" value="${env.JONAS_ROOT}" />

                    <taskdef name="wsgen" classname="org.objectweb.jonas.ant.WsGenTask"
                      classpath="${env.JONAS_ROOT}/lib/common/ow_jonas_ant.jar" />

                    <wsgen srcdir="target" destdir="target" verbose="false" debug="false">
                      <include name="epcis.war" />
                    </wsgen>

                    <delete file="target/epcis.war" />
                    <copy todir="target/">
                      <fileset dir="target/webapps">
                        <include name="epcis.war" />
                      </fileset>
                    </copy>

                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>