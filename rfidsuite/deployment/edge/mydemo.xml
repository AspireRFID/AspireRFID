<architecture id='mydemo'>

  <node id="rfid.repo" type="server">
  </node>

  <node id="rfid.edge1" type="edge" >
	<reader id="reader.COM1" type="tiris6350">
		<configuration>
			<attribute name="PortName" type="java.lang.String">COM1</attribute>
			<attribute name="EventTopic" type="java.lang.String">fr/imag/adele/rfid/DETECTION</attribute>
		</configuration>
	</reader>
	  
	<bridge id="bridge" type="jms">
		<configuration>
			<attribute name="eventAdminTopic" type="java.lang.String">org/epcglobal/ale</attribute>
			<attribute name="jmsServerAddress" type="java.lang.String">${rfid.premise1.address}</attribute>
			<attribute name="topic" type="java.lang.String">org/epcglobal/ale</attribute>
		</configuration>
	</bridge>
	<filter id="filter">
		<configuration>
			<attribute name="RFIDEventTopic" type="java.lang.String">fr/imag/adele/rfid/DETECTION</attribute>
			<attribute name="ReportPublishTopic" type="java.lang.String">rfidtopic</attribute>
			<attribute name="EventIsTag" type="java.lang.Boolean">true</attribute>
			<attribute name="ReportXml" type="java.lang.Boolean">true</attribute>
		</configuration>
	</filter>
  </node>

</architecture>  